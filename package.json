{
  "name": "gh-shared-action",
  "private": true,
  "type": "module",
  "workspaces": [
    "shared",
    "cli", 
    "gh-action"
  ],
  "scripts": {
    "build": "bun run build:shared && bun run build:cli && bun run build:action",
    "build:shared": "cd shared && bun run build",
    "build:cli": "cd cli && bun run build", 
    "build:action": "cd gh-action && bun run build"
  },
  "engines": {
    "node": ">=20"
  }
}