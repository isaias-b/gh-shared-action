{
  "name": "gh-shared-action",
  "private": true,
  "type": "module",
    "workspaces": [
    "shared",
    "cli",
    "gh-action",
    "greet-action",
    "repeat-action",
    "uppercase-action"
  ],
    "scripts": {
    "build": "bun run build:shared && bun run build:cli && bun run build:actions",
    "build:shared": "cd shared && bun run build",
    "build:cli": "cd cli && bun run build",
    "build:actions": "bun run build:greet && bun run build:repeat && bun run build:uppercase",
    "build:greet": "cd greet-action && bun run build",
    "build:repeat": "cd repeat-action && bun run build", 
    "build:uppercase": "cd uppercase-action && bun run build",
    "build:legacy": "cd gh-action && bun run build"
  },
  "engines": {
    "node": ">=20"
  }
}